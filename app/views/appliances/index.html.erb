<h1>Appliances</h1>

<div>
  <%= link_to :new, new_appliance_path %>
</div>
<table>
  <tr>
    <th>ID</th>
    <th>NAME</th>
  </tr>
  <% @appliances.each do |appliance| %>
    <tr>
      <td><%= appliance[:id] %></td>
      <td><%= link_to appliance.name, appliance %></td>
    </tr>
  <% end %>
</table>
