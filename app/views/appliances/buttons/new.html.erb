<%= javascript_pack_tag 'signal', 'data-turbolinks-track': 'reload' %>

<h1>Buttons#new</h1>

<%= form_with model: [@button.appliance, @button], method: :post, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
  <div>
    <%= f.label :signal %>
    <%= f.text_field :signal, required: true, readonly: true %>
    <%= button_tag :reload, type: :button, onclick: 'fetchSignal()' %>
  </div>
  <%= f.submit :create %>
<% end %>
<div>
  <%= link_to :back, @button.appliance %>
</div>
